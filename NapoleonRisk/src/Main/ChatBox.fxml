   <children>
      <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" layoutX="10.0" layoutY="608.0" prefHeight="145.0" prefWidth="980.0">
         <content>
            <VBox fx:id="vBox" prefHeight="130.0" prefWidth="960.0" />
         </content>
      </ScrollPane>
      <TextField fx:id="textInput" layoutX="10.0" layoutY="759.0" onKeyPressed="#sendMessageEnter" prefHeight="27.0" prefWidth="927.0" />
